Options All -Indexes
AddDefaultCharset UTF-8

<IfModule mod_rewrite.c>
	RewriteEngine on

	# Map individual posts
	RewriteCond %{DOCUMENT_ROOT}/blog/$1.html -f
	RewriteRule (.*) blog/$1.html [L,QSA]

	# Map indexes
	RewriteCond %{DOCUMENT_ROOT}/blog/$1/index.html -f
	RewriteRule (.*) blog/$1/index.html [L,QSA]

	# Map feed
	RewriteRule ^feed$ blog/feed.xml [L,QSA]
</IfModule>